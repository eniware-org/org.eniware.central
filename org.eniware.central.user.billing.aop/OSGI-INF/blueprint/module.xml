<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0
		http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">

	<!-- Service References -->

	<reference id="billingBiz"
		interface="org.eniware.central.user.billing.biz.BillingBiz"
		filter="(!(secured=true))"/>
	
	<!-- Published Services -->

	<service ref="aopBillingBiz" interface="org.eniware.central.user.billing.biz.BillingBiz" ranking="10">
		<service-properties>
			<entry key="secured" value="true"/>
		</service-properties>
	</service>
	
	<!-- Supporting Services -->

	<aop:aspectj-autoproxy/>

	<bean id="billingSecurityAspect" class="org.eniware.central.user.billing.aop.BillingSecurityAspect">
		<argument ref="userEdgeDao"/>
	</bean>
		
	<bean id="aopBillingBiz" class="org.eniware.central.user.billing.support.DelegatingBillingBiz">
		<argument ref="billingBiz"/>
	</bean>

</blueprint>
